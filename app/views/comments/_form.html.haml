.comment-form.container.shadow.bg-white.pb-3
  .row
    .col-md-3
    .col-md-6
      = simple_form_for @comment, url: post_comments_path(@post),  remote: true, method: :post do |f|
        = f.text_field :body, hide_label: true, placeholder: "Write your comment", input_group_class: 'trix-comment', required: true
        %br/
        .custom-file
          = f.file_field :picture
        %br/
        = f.button :submit, class: "btn btn-primary"
    .col-md-3
